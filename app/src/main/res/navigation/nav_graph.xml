<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/splashFragment"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.Obynochniy.lab_1.FirstFragment"
        android:label="First Fragment" />

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.Obynochniy.lab_1.SecondFragment"
        android:label="Second Fragment" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.Obynochniy.lab_1.SplashFragment"
        android:label="Splash Fragment" >
        <action
            android:id="@+id/action_splashFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.Obynochniy.lab_1.LoginFragment"
        android:label="Login Fragment" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.Obynochniy.lab_1.RegisterFragment"
        android:label="Register Fragment" />

</navigation>